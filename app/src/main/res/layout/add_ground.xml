<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16.00dp"
    tools:context=".MainActivity">

    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Hello World!"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="152dp"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/boxName"

        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_above="@+id/boxPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:hint="Box Name"
        android:inputType="text"
        android:textColor="#A39F9F"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/boxPrice"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="326dp"
        android:ems="10"
        android:hint="Box Price"
        android:inputType="text"
        android:textColor="#A39F9F"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/selectSports"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="34dp"

        android:layout_marginBottom="275dp"
        android:entries="@array/category"
        android:tooltipText="Select Category" />

    <EditText
        android:id="@+id/address"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:gravity="top|start"
        android:hint="address"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="5"
        android:textColor="#A39F9F"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sbutton"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="23dp"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/selectimage"
        android:layout_width="150dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="609dp"
        android:text="Select Image" />

    <Button
        android:id="@+id/uploadimage"
        android:layout_width="150dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="523dp"
        android:text="Upload Image" />
</RelativeLayout>